{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "pretty": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@ysparadox/mt64": ["packages/mt64/src/index.ts"],
      "@ysparadox/yscrypt": ["packages/yscrypt/src/index.ts"],
      "@ysparadox/ysproto": ["packages/ysproto/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
