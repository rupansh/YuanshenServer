{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "target": "es2020",
        "module": "esnext",
        "lib": ["es2020"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "pretty": true,
        "baseUrl": ".",
        "types": ["node"],
        "paths": {
            "@ysparadox/auth-manager": ["packages/auth-manager/src/index.ts"],
            "@ysparadox/dispatch-geetest": [
                "packages/dispatch-geetest/src/index.ts"
            ],
            "@ysparadox/dispatch-h4ke": ["packages/dispatch-h4ke/src/index.ts"],
            "@ysparadox/dispatch-ints": ["packages/dispatch-ints/src/index.ts"],
            "@ysparadox/dispatch-logger": [
                "packages/dispatch-logger/src/index.ts"
            ],
            "@ysparadox/dispatch-query": [
                "packages/dispatch-query/src/index.ts"
            ],
            "@ysparadox/kcp": [
                "packages/kcp/dist/index.d.ts",
                "packages/kcp/dist/index.node"
            ],
            "@ysparadox/kcp-client-conn": [
                "packages/kcp-client-conn/src/index.ts"
            ],
            "@ysparadox/mt64": ["packages/mt64/src/index.ts"],
            "@ysparadox/packet-handler": [
                "packages/packet-handler/src/index.ts"
            ],
            "@ysparadox/proto-utils": ["packages/proto-utils/src/index.ts"],
            "@ysparadox/ys-keys": ["packages/ys-keys/src/index.ts"],
            "@ysparadox/yscrypt": ["packages/yscrypt/src/index.ts"],
            "@ysparadox/ysproto": ["packages/ysproto/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
